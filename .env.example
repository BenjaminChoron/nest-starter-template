# Database Configuration
DATABASE_USER=                  # Username for main database
DATABASE_PASSWORD=              # Password for main database
DATABASE_NAME=                  # Name of main database
DATABASE_PORT=                  # Port number for main database (default: 5432)
DATABASE_HOST=                  # Host address for main database

# Test Database Configuration
TEST_DATABASE_USER=            # Username for test database
TEST_DATABASE_PASSWORD=        # Password for test database
TEST_DATABASE_NAME=            # Name of test database
TEST_DATABASE_PORT=            # Port number for test database (default: 5432)
TEST_DATABASE_HOST=            # Host address for test database

# JWT Configuration
JWT_SECRET=                    # Secret key for signing access tokens
JWT_REFRESH_SECRET=            # Secret key for signing refresh tokens
JWT_RESET_PASSWORD_SECRET=     # Secret key for password reset tokens
JWT_VERIFICATION_SECRET=       # Secret key for email verification tokens

# Frontend Configuration
FRONTEND_URL=                  # URL of the frontend application (e.g., http://localhost:3000)

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=         # Your Cloudinary cloud name
CLOUDINARY_API_KEY=            # Your Cloudinary API key
CLOUDINARY_API_SECRET=         # Your Cloudinary API secret
CLOUDINARY_FOLDER=             # Folder name for storing uploads in Cloudinary

# Logging Configuration
# Available levels: error, warn, log, debug, verbose
# Comma-separated list, from highest to lowest priority
LOG_LEVELS=error,warn,log,debug